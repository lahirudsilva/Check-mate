{
  "name": "@lahiru.dev/check-mate",
  "version": "1.0.3",
  "type": "module",
  "description": "A TypeScript-based form validation library for React applications.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "release": "npm publish --access public"
  },
  "keywords": [
    "form-validation",
    "react",
    "typescript",
    "validation"
  ],
  "author": "Lahiru De Silva",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
